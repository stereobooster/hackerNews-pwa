{
  "name": "hacker-news-pwa",
  "version": "0.1.3",
  "private": true,
  "dependencies": {
    "preact": "^8.2.7",
    "preact-compat": "^3.18.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "prettier": "^1.10.2",
    "react-scripts": "next",
    "react-snap": "https://github.com/stereobooster/react-snap.git#inline-css-threshold"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "yarn build-preact",
    "build-react": "react-scripts build",
    "build-preact": "node scripts/build-preact.js",
    "postbuild": "react-snap && node scripts/add-push-headers.js",
    "deploy": "firebase deploy",
    "push": "yarn build && yarn deploy",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "prettier": "prettier --write 'src/**/*.{js,css}'"
  },
  "reactSnap": {
    "crawl": false,
    "inlineCss": true,
    "http2PushManifest": true
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      "last 3 versions",
      "not ie < 11"
    ]
  }
}
