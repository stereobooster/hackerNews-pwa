{
  "hosting": {
    "public": "build",
    "rewrites": [
      {
        "source": "/api/**",
        "function": "app"
      },
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/top/**",
        "destination": "/index.html"
      },
      {
        "source": "/new/**",
        "destination": "/index.html"
      },
      {
        "source": "/show/**",
        "destination": "/index.html"
      },
      {
        "source": "/ask/**",
        "destination": "/index.html"
      },
      {
        "source": "/job/**",
        "destination": "/index.html"
      },
      {
        "source": "/item/**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "service-worker.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0"
          }
        ]
      },
      {
        "source": "static/**/*.@(css|js|map)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "Link",
            "value": "</>;rel=preconnect;crossorigin"
          }
        ]
      }
    ]
  }
}
